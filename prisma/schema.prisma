generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  text      String
  createdAt DateTime @default(now())
  title     String
  userId    Int
  User      User     @relation(fields: [userId], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  email    String @unique
  phone    Int?
  image    String?
  Post     Post[]
}
